<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tiny"
    android:backgroundTint="@color/main_green"
    android:elevation="@dimen/elevation"
    app:cardCornerRadius="@dimen/corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/map_preview_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:contentDescription="Image of map"
            android:src="@drawable/ic_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/background_color"
            android:paddingStart="@dimen/padding_medium"
            app:layout_constraintBottom_toTopOf="@+id/duration_tv"
            app:layout_constraintStart_toEndOf="@+id/map_preview_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="0.00 km" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingStart="@dimen/padding_medium"
            android:textColor="@color/background_color"
            app:layout_constraintBottom_toTopOf="@+id/avg_pace_tv"
            app:layout_constraintStart_toEndOf="@+id/map_preview_image"
            app:layout_constraintTop_toBottomOf="@+id/distance_tv"
            tools:ignore="RtlSymmetry"
            tools:text="00:00:00" />

        <TextView
            android:id="@+id/avg_pace_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingStart="@dimen/padding_medium"
            app:layout_constraintBottom_toTopOf="@+id/calories_tv"
            app:layout_constraintStart_toEndOf="@+id/map_preview_image"
            app:layout_constraintTop_toBottomOf="@+id/duration_tv"
            android:textColor="@color/background_color"
            tools:ignore="RtlSymmetry"
            tools:text="00:00 m/km" />

        <TextView
            android:id="@+id/calories_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingStart="@dimen/padding_medium"
            android:textColor="@color/background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/map_preview_image"
            app:layout_constraintTop_toBottomOf="@+id/avg_pace_tv"
            tools:ignore="RtlSymmetry"
            tools:text="0 kcal" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="01/01/2021" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>