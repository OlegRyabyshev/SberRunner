<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        app:key="account"
        app:title="Account">

        <EditTextPreference
            android:icon="@drawable/ic_account"
            android:key="name"
            android:title="Change name"
            android:summary="Tap to change displayed name"/>

        <EditTextPreference
            android:icon="@drawable/ic_weight"
            android:key="weight"
            android:title="Adjust weight"
            android:summary="Tap to adjust your weight"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="settings"
        app:title="Settings">

        <ListPreference
            android:icon="@drawable/ic_theme"
            android:key="theme"
            android:entries="@array/Themes.entries"
            android:entryValues="@array/Themes.entryValues"
            android:summary="Change theme of SberRunner"
            android:title="Theme" />

        <ListPreference
            android:icon="@drawable/ic_units"
            android:key="units"
            android:entries="@array/Units.entries"
            android:entryValues="@array/Units.entryValues"
            android:summary="Tap to switch to metric/imperial units"
            android:title="Units" />

        <androidx.preference.SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_voice"
            android:key="voice_enabled"
            android:title="Voice assistant" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="about"
        app:title="About">

        <Preference
            android:icon="@drawable/ic_version"
            android:key="version"
            android:summary="1.0.0"
            android:title="Version" />

        <Preference
            android:icon="@drawable/ic_log_out"
            android:key="log_out"
            android:title="Log out" />

        <Preference
            android:icon="@drawable/ic_delete_account"
            android:key="del_account"
            android:title="Delete account" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>